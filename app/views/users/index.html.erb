<%= link_to "社員詳細へ", @current_user%>
<div class="container">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">名前</th>
                <th scope="col">年齢</th>
                <th scope="col">性別</th>
                <th scope="col">パスワード</th>
                <th scope="col">管理者</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.age %></td>
                    <td><%= user.gender %></td>
                    <td><%= user.password %></td>
                    <% if user.administrator %>
                    <td><%= "管理者" %></td>
                    <% else %>
                    <td><%= "" %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>



