<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="countainer-fluid">
  <div class="col-sm-3"><%= link_to "ユーザー一覧", :users %></div>
  <div class="col-sm-3"><%= link_to "新規登録", :new_user %></div>
  <div class="col-sm-3"><%= link_to "経費一覧", :costs %></div>
  <div class="col-sm-3"><%= link_to "経費計上", :new_cost %></div>
  </div>

  ログイン
  <%= form_for :session do |f| %>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
    <%= f.label :password, "パスワード" %>
    <%= f.text_field :password %>
    <%= f.submit "ログイン" %>
  <% end %>
    <%= yield %>
  </body>
</html>