<div class="form-group col-sm-3">
  <%= f.label :day, "支払日" %>
  <%= f.date_select :day, use_month_numbers: true,
  class: "form-control" %>
</div>

<div class="form-group col-sm-3">
  <%= f.label :subject_id, "経費" %>
  <%= f.collection_select :subject_id, Subject.all, :id, :name,
  class: "form-control" %>
</div>

<div class="form-group col-sm-3">
  <%= f.label :detail_id, "摘要" %>
  <%= f.collection_select :detail_id,
  Detail.all, :id, :name,
  class: "form-control" %>
</div>

<div class="form-group col-sm-1">
  <%= f.label :price, "金額" %>
  <%= f.text_field :price, class: "form-control" %>
</div>